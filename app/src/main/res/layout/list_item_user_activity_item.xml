<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fgt_activity_item_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/fgt_activity_item_count"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fgt_activity_item_image"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_activity_item_text"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fgt_activity_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/fgt_activity_item_image"
            android:layout_toRightOf="@+id/fgt_activity_item_image"
            android:textColor="#515171"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fgt_activity_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/fgt_activity_item_image"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/fgt_activity_item_icon1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/fgt_activity_item_title"
            android:layout_alignStart="@+id/fgt_activity_item_title"
            android:layout_below="@+id/fgt_activity_item_title"
            android:src="@mipmap/date" />

        <TextView
            android:id="@+id/fgt_activity_item_time"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/fgt_activity_item_icon1"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/fgt_activity_item_icon1"
            android:layout_toRightOf="@id/fgt_activity_item_icon1"
            android:gravity="center"
            android:textColor="#c8c8dc"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/fgt_activity_item_icon2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/fgt_activity_item_title"
            android:layout_alignStart="@+id/fgt_activity_item_title"
            android:layout_below="@+id/fgt_activity_item_icon1"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/location" />

        <TextView
            android:id="@+id/fgt_activity_item_location"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignTop="@+id/fgt_activity_item_icon2"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/fgt_activity_item_icon2"
            android:layout_toRightOf="@id/fgt_activity_item_icon2"
            android:gravity="center"
            android:textColor="#c8c8dc"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>